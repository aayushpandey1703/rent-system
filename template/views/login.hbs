	<script src="//cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js"></script>


	<script type="text/javascript">
	$("#regForm").hide()
	const redirect=()=>{
		$('#loginForm').hide()
		$('#regForm').show()
	
		}
	const redirectLogin=()=>{
		$('#regForm').hide()
		$('#loginForm').show()
		
	}

	$('#register').submit((e)=>{
			e.preventDefault()
			var constraints = {

   username:{
	  length:{
		  minimum:5,
		  message:'Username should be atleast 5 characters long'
	  },
  },

  regpass: {
	  presence:true,
   length:{
	   minimum:5,
	   message:'frfr'	   
   		},
	
  },
 
  confirm:{
	  presence:true,
	  equality:{
		  attribute:'regpass',
		  message:'password mismatch'
	  }
  }
 
};
			const pass=$('#regpassword').val()
			const confirm=$('#regcpass').val()
			const username=$('#reguser').val()
			const email=$("#regemail").val()
			if(validate({regpass:pass,username:username,confirm:confirm}, constraints)){
				const valid=validate({username:username,password:pass,confirm:confirm}, constraints)
				const validArray=Object.keys(valid)
				console.log(valid)
				validArray.forEach((ele)=>{
					
					document.getElementById(ele).setAttribute('data-validate',valid[ele][0])
					document.getElementById(ele).style.borderColor='red'
				})
			}
			else{
			$.ajax({
				type:'post',
				url:'/register',
				data:{
					"password":pass,
					"email":email,
					"username":username
				},
				dataType:'text',
				
			}).done((result)=>{
					const a=JSON.parse(result)
					if(a.error)
						$('#regerror').html('<div class="regerror"><h5>'+a.error+'</h5></div>')
					else
						window.location.href='/'
			})
			}
		
		})
		

$('#login').submit((e)=>{
	e.preventDefault()
	var email=$('#email').val()
	var pass=$('#pass').val()
	
	$.ajax({
		type:'post',
		url:'/login',
		data:{
			'email':email,
			'password':pass
		},
		dataType:'text'
	}).done((result)=>{
		const resultObject=JSON.parse(result)
		console.log(resultObject)
		if(resultObject.error)
		{
			$('#error').html('<div class="error"><h5>'+resultObject.error+'</h5></div>')

		}
		else{
			window.location.href='/'
		}
	})
})
	</script>

