<body style="background-color: #666666;">
	
	<div class="limiter" style="margin-top:-9.5%">
		<div class="container-login100">
			<div class="wrap-login100">
				<div id='loginForm'>
					<form id="login" class="login100-form validate-form">
					<span class="login100-form-title p-b-43" id="title">
						login User
					</span>
				<div id="error">
					
				</div>
				<div id='fields'>

					
					<div class="wrap-input100 validate-input">
						<input class="input100" type="email" id='email' name="Email">
						<span class="focus-input100"></span>
						<span class="label-input100">Email*</span>
					</div>
					
					
					<div class="wrap-input100 validate-input" id="password" data-validate="Password is required">
						<input class="input100" type="password" id="pass" name="pass" value="" >
						<span class="focus-input100"></span>
						<span class="label-input100">Password*</span>
						
					</div>
	

					
				</div>
				<div class="flex-sb-m w-full p-t-3 p-b-32">
						<div class="contact100-form-checkbox">
							<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
							<label class="label-checkbox100" for="ckb1">
								Remember me
							</label>
						</div>

						<div id='forgot'>
							<a href="#" class="txt1">
								Forgot Password?
							</a>
						</div>
					</div>
			

					<div class="container-login100-form-btn">
						<button type="submit" id="submit" class="login100-form-btn">
							Login
						</button>
					</div>
					
					<div class="text-center p-t-46 p-b-20">
						<span class="txt2">
							<a href="#" onclick="redirect()">sign up</a>
						</span>
					</div>
					

					
				</form>
				</div>
				<div id='regForm'>
				<form id="register" class="login100-form validate-form">
					<span class="login100-form-title p-b-43" id="title">
						Register User
					</span>
				<div id="regerror">
					
				</div>
				<div id='fields'>
<div class="wrap-input100 validate-input" id="username" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" id="reguser" name="username">
						<span class="focus-input100"></span>
						<span class="label-input100">Username</span>
					</div>
					
					<div class="wrap-input100 validate-input">
						<input class="input100" type="email" id='regemail' name="Email">
						<span class="focus-input100"></span>
						<span class="label-input100">Email*</span>
					</div>
					
					
					<div class="wrap-input100 validate-input" id="regpass" data-validate="Password is required">
						<input class="input100" type="password" id="regpassword" name="regpass">
						<span class="focus-input100"></span>
						<span class="label-input100">Password*</span>
						
					</div>
					<div class="wrap-input100 validate-input" id="confirm" data-validate="Password is required">
						<input class="input100" type="password" id="regcpass" name="confirm" >
						<span class="focus-input100"></span>
						<span class="label-input100">Confirm password*</span>
					</div>

					
				</div>
				<div class="flex-sb-m w-full p-t-3 p-b-32">
						<div class="contact100-form-checkbox">
							<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
							<label class="label-checkbox100" for="ckb1">
								Remember me
							</label>
						</div>

						
					</div>
			

					<div class="container-login100-form-btn">
						<button type="submit" id="submit" class="login100-form-btn">
							Register
						</button>
					</div>
					
					<div class="text-center p-t-46 p-b-20">
						<span class="txt2">
							<a href="#" onclick="redirectLogin()">sign in</a>
						</span>
