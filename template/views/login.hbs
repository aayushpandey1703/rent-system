	<script src="//cdnjs.cloudflare.com/ajax/libs/validate.js/0.13.1/validate.min.js"></script>


	<script type="text/javascript">
	
	$(document).ready(()=>{
		$('form').submit((e)=>{
			e.preventDefault()
				var constraints = {
   username:{
	  length:{
		  minimum:5,
		  message:'Username should be atleast 5 characters long'
	  },
  },
  password: {
    presence: true,
   length:{
	   minimum:5	   
   },
	format:{
		pattern:'[a-z0-9]+',

		message:'invalid pattern'
	},
	
  },
 
  confirm:{
	  presence:true,
	  equality:{
		  attribute:'password',
		  message:'password mismatch'
	  }
  }
 
};
			const pass=$('#pass').val()
			const confirm=$('#cpass').val()
			const username=$('#user').val()
			const email=$("#email").val()
			if(validate({password:pass,username:username,confirm:confirm}, constraints)){
				const valid=validate({username:username,password:pass,confirm:confirm}, constraints)
				const validArray=Object.keys(valid)
				console.log(valid)
				validArray.forEach((ele)=>{
					
					document.getElementById(ele).setAttribute('data-validate',valid[ele][0])
					document.getElementById(ele).style.borderColor='red'
				})
			}
			else{
			$.ajax({
				type:'post',
				url:'/register',
				data:{
					"pass":pass,
					"confirm":confirm,
					"email":email,
					"username":username
				},
				dataType:'text',
				
			}).done((result)=>{
					const a=JSON.parse(result)
					if(a.error)
						$('#error').html('<div class="error"><h5>'+a.error+'</h5></div>')
					else
						window.location.href='/home/1234567'
			})
			}
		
		})
		
	})

